<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.nanodegree.newyorktravel">

	<!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	<application
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".activities.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".activities.AttractionDetail"
			android:parentActivityName=".activities.MainActivity"
			android:theme="@style/NoActionBarTheme">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity" />
		</activity>

		<activity
			android:name=".activities.ActivityReviewDetail"
			android:label="@string/title_activity_review_detail"
			android:parentActivityName=".activities.MainActivity"
			android:theme="@style/AppTheme">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity" />
		</activity>

        <activity android:name=".activities.ActivityAddReview"
			android:label="@string/title_activity_add_review"
			android:parentActivityName=".activities.MainActivity"
			android:theme="@style/AppTheme">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity" />
		</activity>

        <activity android:name=".activities.ActivitySettings"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".activities.MainActivity"
			android:theme="@style/AppTheme">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity" />
		</activity>

		<meta-data
			android:name="com.google.android.geo.API_KEY"
			android:value="@string/google_maps_key" />
    </application>
</manifest>