<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:orientation="horizontal"
	card_view:cardCornerRadius="2dp"
	card_view:cardElevation="5dp"
	card_view:contentPadding="10dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/item_attraction_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			tools:src="@drawable/ic_launcher_foreground"
			android:contentDescription="@string/activity_detail_attraction_alt" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/item_attraction_name"
				style="@style/Header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/fragment_attractions_text_margin"
				android:layout_marginStart="@dimen/fragment_attractions_text_margin"
				tools:text="Empire State Building" />

			<TextView
				android:id="@+id/item_attraction_desc"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/fragment_attractions_text_margin"
				android:layout_marginStart="@dimen/fragment_attractions_text_margin"
				android:layout_marginTop="@dimen/fragment_attractions_text_margin"
				tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>